import javax.swing.JOptionPane;
import java.util.Scanner;

class BirthDay
{
  public static void main(String [] args)
  {
String yearString =
JOptionPane.showInputDialog("Enter the year of your birthday:");

int year = Integer.parseInt(yearString);



String monthString =
JOptionPane.showInputDialog("Enter the month of your birthday (3-12)(Please enter 13 for January and 14 for February)");
int month = Integer.parseInt(monthString);


String dayString =
JOptionPane.showInputDialog("Enter the day of your birthday (1-31): ");  
int day = Integer.parseInt(dayString);

switch (month) {
case 13:  monthString = "January";
break;
case 14:  monthString = "February";
break;
case 3:  monthString = "March";
break;
case 4:  monthString = "April";
break;
case 5:  monthString = "May";
break;
case 6:  monthString = "June";
break;
case 7:  monthString = "July";
break;
case 8:  monthString = "August";
break;
case 9:  monthString = "September";
break;
case 10: monthString = "October";
break;
case 11: monthString = "November";
break;
case 12: monthString = "December";
break;
default: monthString = "Invalid month";
break;
}
int j = year / 100;
int k = year % 100 ;
double h = (day + ((26*(month + 1)) / 10) + k + (k / 4) +(j / 4) + (5 * j)) % 7;
int h1 = (int)h;
switch (h1) {
case 0:  dayString = "Saturday";
break;
case 1:  dayString = "Sunday";
break;
case 2:  dayString = "Monday";
break;
case 3:  dayString = "Tuesday";
break;
case 4:  dayString = "Wednesday";
break;
case 5:  dayString = "Thursday";
break;
case 6:  dayString = "Friday";
break;

default: monthString = "Invalid month";
break;
}

System.out.println("Day of the week is: " + dayString);
JOptionPane.showMessageDialog(null,"The Day you were born is: " + dayString);
}
}
